<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/spacing_large">

    <EditText
        android:id="@+id/editTextPetName"
        android:autofillHints=""
        android:hint="@string/pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextSpecies"
        android:autofillHints=""
        android:hint="@string/species"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextBreed"
        android:autofillHints=""
        android:hint="@string/breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonSavePet"
        android:text="@string/save"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMedicalRecords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_medium"
        android:padding="@dimen/spacing_medium"/>

    <TextView
        android:id="@+id/textNoRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_medical_records"
        android:gravity="center"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginTop="@dimen/spacing_medium"
        />


    <Button
        android:id="@+id/buttonDeletePet"
        android:text="@string/delete_pet"
        style="@style/Button.Primary"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xlarge"
/>
</LinearLayout>
