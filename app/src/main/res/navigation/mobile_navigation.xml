<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="org.unibl.etf.vetclinic.ui.home.HomeFragment"
        android:label="Početna"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/petListFragment"
        android:name="org.unibl.etf.vetclinic.ui.pet.PetListFragment"
        android:label="Ljubimci">

        <action
            android:id="@+id/action_petListFragment_to_addPetFragment"
            app:destination="@id/addPetFragment" />

        <action
            android:id="@+id/action_petListFragment_to_petDetailsFragment"
            app:destination="@id/petDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPetFragment"
        android:name="org.unibl.etf.vetclinic.ui.pet.AddPetFragment"
        android:label="Dodaj ljubimca" />

    <fragment
        android:id="@+id/petDetailsFragment"
        android:name="org.unibl.etf.vetclinic.ui.pet.PetDetailsFragment"
        android:label="Detalji ljubimca">
        <argument
            android:name="petId"
            app:argType="integer" />
    </fragment>


    <fragment
        android:id="@+id/navigation_appointments"
        android:name="org.unibl.etf.vetclinic.ui.appointment.AppointmentFragment"
        android:label="Termini"
        tools:layout="@layout/fragment_appointment" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="org.unibl.etf.vetclinic.ui.profile.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" />

</navigation>
